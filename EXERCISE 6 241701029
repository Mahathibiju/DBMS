-- 1. Employees in the same department as a given employee (excluding that employee)
SELECT last_name, hire_date
FROM employees
WHERE department_id = (
    SELECT department_id
    FROM employees
    WHERE last_name = '&employee_name'
)
AND last_name <> '&employee_name';


-- 2. Employees earning more than the average salary (sorted ascending)
SELECT employee_id, last_name, salary
FROM employees
WHERE salary > (
    SELECT AVG(salary) FROM employees
)
ORDER BY salary ASC;


-- 3. Employees who work in a department with anyone whose last name contains 'u'
SELECT employee_id, last_name
FROM employees
WHERE department_id IN (
    SELECT DISTINCT department_id
    FROM employees
    WHERE last_name LIKE '%u%'
);


-- 4. Employees whose department location ID = 1700
SELECT e.last_name, e.department_id, e.job_id
FROM employees e
JOIN departments d ON e.department_id = d.department_id
WHERE d.location_id = 1700;


-- 5. Employees who report to King
SELECT last_name, salary
FROM employees
WHERE manager_id = (
    SELECT employee_id
    FROM employees
    WHERE last_name = 'King'
);


-- 6. Employees in the Executive department
SELECT e.department_id, e.last_name, e.job_id
FROM employees e
JOIN departments d ON e.department_id = d.department_id
WHERE d.department_name = 'Executive';


-- 7. Employees earning more than average AND in a department with anyone whose last name contains 'u'
SELECT employee_id, last_name, salary
FROM employees
WHERE salary > (
    SELECT AVG(salary) FROM employees
)
AND department_id IN (
    SELECT DISTINCT department_id
    FROM employees
    WHERE last_name LIKE '%u%'
);
